<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ghsearch.luis">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="ghsearch.luis.TheApp">
        <activity android:name="ghsearch.luis.WebViewActivity"
            android:parentActivityName="ghsearch.luis.DetailsActivity"
            android:launchMode="singleTop" ></activity>
        <activity android:name="ghsearch.luis.DetailsActivity"
            android:parentActivityName="ghsearch.luis.ResultsActivity"
            android:launchMode="singleTop" />
        <activity android:name="ghsearch.luis.ResultsActivity"
            android:parentActivityName="ghsearch.luis.MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="ghsearch.luis.AboutActivity"
            android:parentActivityName="ghsearch.luis.MainActivity"
            android:launchMode="singleTop"
            android:label="About"/>
        <activity android:name="ghsearch.luis.MainActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>